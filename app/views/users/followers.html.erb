<div class="row my-5">
  <div class="col-md-5 mx-auto bg-white rounded shadow p-3 my-5">
    <h2 class="text-center"><strong>フォロワー</strong></h2>
    <% if @user.followers.blank? %>
      <h3 class="text-center my-5">まだフォロワーがいません</h3>
    <% else %>
      <% @users.each do |user| %>
        <%= render "follow_user", {user: user} %>
      <% end %>
    <% end %>
  </div>
</div>