<% if user_signed_in? %>
  <% if post.liked_by?(current_user) %>
    <%= link_to post_likes_path(post), method: :DELETE, remote: true do %>
      <i class="fas fa-heart" style="color: red; font-size: 30px;"></i>
    <% end %>
    <span><%= post.likes.count %></span>
  <% else %>
    <%= link_to post_likes_path(post), method: :POST, remote: true do %>
      <i class="far fa-heart" style="color: black; font-size: 30px;"></i>
    <% end %>
    <span><%= post.likes.count %></span>
  <% end %>
<% end %>