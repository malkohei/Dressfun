<!DOCTYPE html>
<html>
  <head>
    <title>Dressfun</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <% if user_signed_in? %>
          <a class="navbar-brand" href=""><strong>Dress<%= image_tag('icon2.png') %>fun</strong></a>
        <% else %>
          <a class="navbar-brand" href="/"><strong>Dress<%= image_tag('icon2.png') %>fun</strong></a>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item mx-3">
              <%= link_to new_user_registration_path do %>
                <i class="fas fa-user-plus btn" style="color: white; font-size: 27px;"></i>
              <% end %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt btn" style="color: white; font-size: 27px;"></i>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </header>
    <div class="container mw-100" style="background-color: #eee; height: 100%;">
      <%= yield %>
    </div>
  </body>
</html>
