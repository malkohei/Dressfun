<!DOCTYPE html>
<html>
  <head>
    <title>Dressfun</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <% if user_signed_in? %>
          <a class="navbar-brand" href="/posts" style="font-size: 30px;"><strong>Dress<%= image_tag 'icon2.png', :size =>'30x30' %>fun</strong></a>
          <%= search_form_for @q, url: search_posts_path do |f| %>
            <div class="row offset-md-4">
              <div class="col-md-10">
                <%= f.search_field :title_or_caption_or_color_cont, class: "form-control rounded-pill", placeholder: 'キーワードを入力してください' %>
              </div>
              <div class="col-md-2">
                <%= f.submit "Search", class: "btn btn-success rounded-pill" %>
              </div>
            </div>
          <% end %>
          <ul class="navbar-nav nav justify-content-end">
            <li class="nav-item mx-3">
              <%= link_to new_post_path do %>
                <i class="fas fa-plus-square btn" style="color: white; font-size: 35px;"></i>
              <% end %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to user_path(current_user.id) do %>
                <%= attachment_image_tag current_user,:user_image, :fill, 35, 35, format: 'jpeg', fallback: "user_icon.png", size: '35x35', class: "mt-1 rounded-circle" %>
              <% end %>
            </li>
            <li>
              <label class="text-white mt-2">Hi, <%= current_user.nickname %> !!</label>
            </li>
            <li class="nav-item mx-4 my-auto">
              <%= link_to about_path do %>
                <i class="fas fa-question-circle" style="color: white; font-size: 35px;"></i>
              <% end %>
            </li>
          </ul>
        <% else %>
          <a class="navbar-brand" href="/" style="font-size: 30px;"><strong>Dress<%= image_tag 'icon2.png', :size =>'30x30' %>fun</strong></a>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item mx-3">
              <%= link_to new_user_registration_path do %>
                <i class="fas fa-user-plus btn" style="color: white; font-size: 35px;"></i>
              <% end %>
            </li>
            <li class="nav-item mx-3">
              <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt btn" style="color: white; font-size: 35px;"></i>
              <% end %>
            </li>
            <li class="nav-item mx-4 my-auto">
              <%= link_to about_path do %>
                <i class="fas fa-question-circle" style="color: white; font-size: 35px;"></i>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </header>
    <div class="container mw-100" style="background-color: #eee; height: auto;">
      <%= yield %>
    </div>
  </body>
</html>
