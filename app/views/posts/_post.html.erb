  <div class="row my-5" style="background-color: #eee;">
    <div class="col-md-7 mx-auto bg-white rounded shadow p-3 my-5 pb-2">
      <div class="row offset-md-1">
        <%= link_to user_path(post.user) do %>
          <%= attachment_image_tag post.user, :user_image, :fill, 50, 50, format: 'jpeg', fallback: "user_icon2.png", size: '50x50', class: "mt-1 rounded-circle" %>
          <strong class="my-auto mx-4" style="color: black;"><%= post.user.nickname %></strong>
        <% end %>
        <label class="my-auto mx-2"><%= post.created_at.strftime('%Y/%m/%d') %></label>
      </div>
      <div class="post_image my-4">
        <% if post.post_images.present? %>
          <% post.post_images.each do |post_image| %>
            <div>
              <%= attachment_image_tag post_image, :image, size: "500x370", format: 'jpeg', class: "mx-auto border border-3 my-auto" %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="d-flex justify-content-end" style="margin-right: 65px;">
        <div style="margin-right: 40px;" id="like-<%= post.id %>">
          <%= render partial: 'likes/like', locals: {post: post} %>
        </div>
        <div id="favorite-<%= post.id %>">
          <%= render partial: 'favorites/favorite', locals: {post: post} %>
        </div>
      </div>

      <div class="col-md-10 my-3 offset-md-1">
        <%= link_to post_path(post) do %>
          <strong style="color: black;"><%= post.title %></strong>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-2 my-3">
        <%= post.caption %>
      </div>
      <div class="col-md-4 offset-md-2 my-3">
        <%= post.color %>
      </div>

      <div class="col offset-md-1 mt-5">
        <%= link_to post_path(post.id) do %>
          <p style="color: black;">コメント (<%= post.post_comments.count %>)</p>
        <% end %>
      </div>

    </div>
  </div>