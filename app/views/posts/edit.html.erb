<div class="row my-5">
  <div class="col-md-6 mx-auto bg-white rounded shadow p-3 my-5 pb-5">
    <div class="row offset-md-1">
        <%= link_to user_path(@post.user) do %>
          <%= attachment_image_tag @post.user, :user_image, :fill, 50, 50, format: 'jpeg', fallback: "user_icon_png", size: '50x50', class: "mt-1 rounded-circle" %>
          <strong class="my-auto mx-4" style="color: black;"><%= @post.user.nickname %></strong>
        <% end %>
        <label class="my-auto mx-2"><%= @post.created_at.strftime('%Y/%m/%d') %></label>
    </div>
      <div class="post_image my-4">
        <% if @post.post_images.present? %>
          <% @post.post_images.each do |post_image| %>
            <div>
              <%= attachment_image_tag post_image, :image, size: "500x350", class: "mx-auto border border-3 my-auto" %>
            </div>
          <% end %>
        <% end %>
      </div>

      <%= form_with model: @post, local: true do |f| %>
        <div class="col-md-10 offset-md-1">
          <label>投稿画像</label><br />
          <%= f.attachment_field :post_images_images, multiple: true %>
        </div>
        <div class="col-md-10 offset-md-1 my-3">
          <label>投稿タイトル</label>
          <%= f.text_field :title, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="col-md-10 offset-md-1 my-3">
          <label>投稿内容</label>
          <%= f.text_area :caption, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="col-md-10 offset-md-1 my-3">
          <label>色</label>
          <%= f.text_field :color, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="col-md-10 offset-md-1 my-3">
          <%= f.submit "更新する", class: "btn btn-primary col-md-12" %>
        </div>
      <% end %>

      <div class="col-md-10 offset-md-1 my-3">
        <%= link_to :back do %>
          <button type="button" class="btn btn-outline-secondary col-md-12">戻る <i class="fas fa-undo-alt"></i></button>
        <% end %>

      </div>
  </div>
</div>